{
  "version": 2,
  "tags": [
    {
      "name": "ia-book-visual-adjustments",
      "description": "Visual adjustments for BookReader",
      "properties": [
        {
          "name": "renderHeader",
          "type": "Boolean",
          "description": "Draws subpanel header",
          "default": false
        },
        {
          "name": "options",
          "type": "Array",
          "description": "The visual adjustment controls to be rendered",
          "default": []
        },
        {
          "name": "activeCount",
          "type": "Integer",
          "description": "Count of active adjustments",
          "default": 0
        },
        {
          "name": "showZoomControls",
          "type": "Boolean",
          "description": "Toggles rendering of zoom controls",
          "default": true
        }
      ],
      "events": [
        {
          "name": "visualAdjustmentOptionChanged",
          "description": "Fires when options have loaded or changed"
        },
        {
          "name": "visualAdjustmentZoomIn",
          "description": "Zoom in button clicked"
        },
        {
          "name": "visualAdjustmentZoomOut",
          "description": "Zoom out button clicked"
        }
      ],
      "slots": [],
      "cssProperties": []
    }
  ]
}
